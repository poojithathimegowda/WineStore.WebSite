@model IEnumerable<WineStore.WebSite.Models.Admin.ShopViewModel>

@{
    ViewData["Title"] = "ListOfShops";
}

<h1>ListOfShops</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shop_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shop_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Shop_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shop_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Shop_ID }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Shop_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Shop_ID })
            </td>
        </tr>
}
    </tbody>
</table>
