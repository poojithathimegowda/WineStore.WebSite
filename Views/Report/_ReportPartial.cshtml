@model WineStore.WebSite.Models.Admin.ReportViewModel

@if (Model.Shop != null)
{
  





    <h3>Report for @Model.Shop.Shop_Name</h3>
    <p>Location: @Model.Shop.Location</p>
    <p>Period: @Model.StartDate.ToString("yyyy-MM-dd") to @Model.EndDate.ToString("yyyy-MM-dd")</p>


    <a id="downloadButton" class="btn btn-primary" href="@Url.Action("Download", "Report", new { Shop_ID = Model.Shop.Shop_ID, start = Model.StartDate.ToString("yyyy-MM-dd"), end = Model.EndDate.ToString("yyyy-MM-dd") })">
        <i class="fas fa-file-pdf"></i> Download Report
    </a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Description</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Income</td>
                <td>@Model.Income</td>
            </tr>
            <tr>
                <td>Expenses</td>
                <td>@Model.Expenses</td>
            </tr>
            <tr>
                <td>Profit/Loss</td>
                <td>@Model.ProfitOrLoss</td>
            </tr>
        </tbody>
    </table>

    @if (Model.Orders != null && Model.Orders.Any())
    {
        <h3>Orders</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Total Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.Date.ToString("yyyy-MM-dd")</td>
                        <td>@order.TotalAmount</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @if (Model.ExpensesList != null && Model.ExpensesList.Any())
    {
        <h3>Expenses</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model.ExpensesList)
                {
                    <tr>
                        <td>@expense.Date</td>
                        <td>@expense.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    }

}
