@model IEnumerable<WineStore.WebSite.Models.StoreManager.Orders>

@{
    ViewData["Title"] = "ListOfOrders";
}

<h1>ListOfOrders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
