@model WineStore.WebSite.Models.PurchaseManager.InventoryViewModel

@{
    ViewData["Title"] = "AddInventory";
}

<h1>AddInventory</h1>

<h4>InventoryViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddInventory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Inventory_ID" class="control-label"></label>
                <input asp-for="Inventory_ID" class="form-control" />
                <span asp-validation-for="Inventory_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product_ID" class="control-label"></label>
                <input type="text" id="product_name" class="form-control" />
                <input type="hidden" id="product_id" name="Product_ID" />
                <span asp-validation-for="Product_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop_ID" class="control-label"></label>
                <input type="text" id="shop_name" class="form-control" />
                <input type="hidden" id="shop_id" name="Shop_ID" />
                <span asp-validation-for="Shop_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>
    <script>
        $(function () {
            $("#shop_name").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Shop/AutoComplete",
                        type: "GET",
                        dataType: "json",
                        data: { term: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.label, value: item.value };
                            }));
                        }
                    });
                },
                minLength: 1,
                select: function (event, ui) {
                    $("#shop_id").val(ui.item.value);
                }
            });

            $("#product_name").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Product/AutoComplete",
                        type: "GET",
                        dataType: "json",
                        data: { term: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.label, value: item.value };
                            }));
                        }
                    });
                },
                minLength: 1,
                select: function (event, ui) {
                    $("#product_id").val(ui.item.value);
                }
            });
        });
    </script>
}
