@model IEnumerable<WineStore.WebSite.Models.PurchaseManager.SupplierViewModel>

@{
    ViewData["Title"] = "ListOfSuppliers";
}

<h1>ListOfSuppliers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Supplier_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact_Details)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact_Details)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new {id=item.Supplier_ID}) |
                    @Html.ActionLink("Details", "Details", new { id=item.Supplier_ID }) |
                    @Html.ActionLink("Delete", "Delete", new {id=item.Supplier_ID})
            </td>
        </tr>
}
    </tbody>
</table>
